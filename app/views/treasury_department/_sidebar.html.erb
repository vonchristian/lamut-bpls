<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
      <!-- Sidebar user panel -->
      <div class="user-panel">
        <div class="pull-left image">
          <%=link_to(image_tag(current_user.avatar.url(:small), class: "img-circle", width: 40, height: 40), user_path(current_user)) %>
        </div>
        <div class="pull-left info">
          <p><%=link_to current_user.first_name, bplo_section_settings_user_path(current_user) %></p>
          <a href="#"><i class="fa fa-circle text-success"></i> <small><%=current_user.role %></small></a>
        </div>
      </div>
      <!-- search form -->
      <%=form_tag search_results_path, method: :get, class: "sidebar-form" do %>
      <div class="input-group">
        <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search..." %>
        <span class="input-group-btn">
          <%= button_tag(type: 'submit', id: "search-btn", class: "btn btn-flat") do %>
            <i class="fa fa-search"></i>
          <% end %>
        </span>
      </div>
    <% end %>
      <!-- /.search form -->
      <!-- sidebar menu: : style can be found in sidebar.less -->
      <ul class="sidebar-menu">
          <li class="header"> MAIN NAVIGATION </li>
          <!-- <li><a href="/dashboard"><i class="fa fa-dashboard"></i> <span>Dashboard</span></a></li> -->
          <li class=<%= 'active' if current_page?(treasury_department_businesses_path) %> ><a href="/treasury_department/businesses"><i class="icon-grid"></i> <span> &nbsp; Businesses</span></a></li>
          <li class=<%= 'active' if current_page?(treasury_department_collections_path) %> ><a href="/treasury_department/collections"><i class="icon-credit-card"></i> <span> &nbsp; Collections </span></a></li>
           <li class=<%= 'active' if current_page?(tricycles_path) %> ><a href="/tricycles"><i class="fa fa-motorcycle"></i> <span> &nbsp; Tricycles </span></a></li>

    </section>
    <!-- /.sidebar -->
  </aside>
