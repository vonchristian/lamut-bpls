<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="box box-default">
      <div class="box-header">
        <h3 class="box-title"> Payment Details </h3>
      </div>
      <div class="box-body">
        <%= @entry.commercial_document.try(:name) %>
        <h4> Debit </h4>
        <% @entry.debit_amounts.each do |amount| %>
          <div class="row">
            <div class="col-md-8">
              <%= amount.account.try(:name) %>
            </div>
            <div class="col-md-4">
              <span class="pull-right"><%= number_to_currency amount.amount %></span>
            </div>
          </div>
          <br>
        <% end %>
        <h4> Credit </h4>
        <% @entry.credit_amounts.each do |amount| %>
          <div class="row">
            <div class="col-md-8">
              <%= amount.account.try(:name) %>
            </div>
            <div class="col-md-4">
              <span class="pull-right"><%= number_to_currency amount.amount %></span>
            </div>
          </div>
          <br>
        <% end %>
