<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="box box-default">
      <div class="box-header">
        <h3 class="box-title"> Public Market Details </h3>
      </div>
      <div class="box-body">
        <%= simple_form_for [@business, @stall], url: :bplo_section_business_stalls do |f| %>
          <%= f.input :public_market_id, collection: PublicMarket.all.map{ |a| [a.name, a.id]} %>
          <%= f.input :stall_type, collection: Stall.stall_types.keys.to_a.map{|a| [a.titleize, a] }, as: :radio_buttons %>
          <div class="box-footer">
            <%= f.submit "Save", class: "btn btn-primary pull-right" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
