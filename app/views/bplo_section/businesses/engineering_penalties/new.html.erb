<% breadcrumb :new_business_engineering_penalty, @business %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <!-- Widget: user widget style 1 -->
  <div class="box box-widget widget-user-2">
    <!-- Add the bg color to the header using any of the bg-* classes -->
    <div class="widget-user-header">
      <div class="widget-user-image">
        <%=image_tag(@business.avatar.url(:large), class: "img-circle") %>
      </div>
      <!-- /.widget-user-image -->
      <h3 class="widget-user-username">
        <%=link_to business_path(@business) do %>
          <%= @business.name.try(:upcase) %></h3>
          <h5 class="widget-user-desc text-muted"><%= @business.taxpayers.distinct.each.map{|a| a.full_name }.join(" | ") %></h5>
        <% end %>
    </div>
    <div class="box-body">
        <%= simple_form_for [@business, @engineering_penalty], url: :bplo_section_business_engineering_penalties do |f| %>
          <%= f.input :calendar_year, as: :string, input_html: { value: Time.zone.now.strftime("%B %e, %Y"), class: "datepicker" } %>
          <%= f.input :amount %>
          <div class="box-footer">
            <%= f.submit "Save Assessment", class: "btn btn-primary pull-right", data: { disable_with: 'Saving...'} %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
