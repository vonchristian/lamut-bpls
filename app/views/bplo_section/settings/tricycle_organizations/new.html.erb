<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="box box-danger">
      <div class="box-header">
        <h3 class="box-title"> Organization Details </h3>
      </div>
      <div class="box-body">
        <%= simple_form_for @organization, url: :bplo_section_settings_tricycle_organizations do |f| %>
          <%= f.input :name %>
          <%= f.input :abbreviated_name %>

          <div class="box-footer">
            <%= f.submit "Create Organization", class: "btn btn-primary btn-flat pull-right" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
