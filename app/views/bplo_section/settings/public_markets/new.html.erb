<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="box box-danger">
      <div class="box-header">
        <h3 class="box-title"> Public Market Details </h3>
      </div>
      <div class="box-body">
        <%= simple_form_for @public_market, url: :bplo_section_settings_public_markets do |f| %>
          <%= f.input :name %>
          <%= f.input :address %>
          <div class="box-footer">
            <%= f.submit "Create Public Market", class: "btn btn-danger pull-right" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
