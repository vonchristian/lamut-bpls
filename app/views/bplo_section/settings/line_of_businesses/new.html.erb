<div class="row">
  <div class="col-md-9 col-md-offset-2">
    <div class="box box-danger">
      <div class="box-header">
        <h3 class="box-title"> Line of Business Details </h3>
      </div>
      <div class="box-body">
        <%= simple_form_for @line_of_business, url: :bplo_section_settings_line_of_businesses do |f| %>
          <%= f.error_notification %>
          <%= f.input :name %>
          <%= f.input :mayors_permit_fee_business_category_id, label: "Category", collection: BploSection::Settings::MayorsPermitFeeBusinessCategory.all.map{|a| [a.name, a.id] }, input_html: { id: 'select_line_of_business_business_category'}, prompt: 'Select Business Category' %>
          <%= f.input :has_storage_permit_fee, label: "Has Storage Permit Fee" %>
          <%= f.simple_fields_for :mayors_permit_fee do |ff| %>
            <%= ff.input :amount, label: "Mayors Permit Fee" %>
          <% end %>
          <%= f.input :required_document_ids, label: "Required Documents", collection: BploSection::Settings::RequiredDocument.all.map{ |a| [a.name, a.id] }, as: :check_boxes %>
          <hr>
          <%= f.input :competetive_index_category_id, label: "Competetive Index Category", collection: BploSection::Settings::CompetetiveIndexCategory.all.map{ |a| [ a.name, a.id]}, as: :radio_buttons %>
          <div class="box-footer">
            <%= f.submit "Save Line Of Business", class: "btn btn-primary btn-flat pull-right" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
