<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="box box-danger">
      <div class="box-header">
        <h3 class="box-title"> Update Fee </h3>
      </div>
      <div class="box-body">
        <%= simple_form_for @fee, url: :bplo_section_settings_fee do |f| %>
          <%= f.error_notification %>
          <%=f.input :name %>
          <%= f.input :amount %>
          <%= f.input :default_fee, label: 'Default Fee' %>
          <%= f.input :debit_account_id, collection: Accounting::Account.all.map{|a| [a.name, a.id] } %>
          <span class="help-block"> Account to debit during assessment </span>
          <%= f.input :credit_account_id, collection: Accounting::Account.all.map{|a| [a.name, a.id] } %>
          <span class="help-block"> Revenue account for this fee </span>
          <div class="modal-footer">
            <%= f.submit 'Update Fee', class: "btn btn-danger pull-right" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
