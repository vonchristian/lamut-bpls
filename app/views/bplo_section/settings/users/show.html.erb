<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="box box-primary">
      <div class="box-header">
        <h3 class="box-title"> Employee Details</h3>
      </div>
      <div class="box-body">
        <center><%=image_tag(@user.avatar.url(:large), class: "img-circle") %></center>
        <hr>
        <div class="row">
          <div class="col-md-4">
            Full Name
          </div>
          <div class="col-md-6">
            <%= @user.full_name %>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-md-4">
            Designation
          </div>
          <div class="col-md-6">
            <%= @user.role.try(:titleize).try(:upcase) %>
          </div>
        </div>
        <br>
        <%=link_to "Update Info", edit_user_path(@user), class: "btn btn-primary btn-block" %>
        <br>
      </div>
    </div>
  </div>
</div>
