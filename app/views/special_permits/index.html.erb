<% breadcrumb :special_permits %>
<div class="row">
  <div class="col-md-12">
    <div class="box box-default">
    <div class="box-header with-border">
      <div class="row">
        <div class="col-md-2 hidden-xs">
          <h3 class="box-title"> Special Permits </h3>
        </div>
        <div class="col-md-7 col-xs-12">
          <%=form_tag special_permits_path, method: :get, class: "search-form" do %>
            <div class="input-group">
              <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search ..", id: 'taxpayer-search-form' %>
              <span class="input-group-btn">
                <%= button_tag(type: 'submit', id: "search-btn", class: "btn btn-flat") do %>
                  <i class="fa fa-search"></i>
                <% end %>
              </span>
            </div>
          <% end %>
        </div>
        <div class="col-md-2">
          <% if policy([Business.new]).new? %>
            <%= link_to 'New Application', new_special_permit_application_path, class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>

      <div class="box-body">
        <div class="table table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th> Taxpayer </th>
                <th> Special Permit </th>
                <th> Start Date </th>
                <th> End Date </th>
              </tr>
              <tbody>
                <% @special_permits.each do |special_permit| %>
                  <tr>
                    <td> <%=link_to special_permit.taxpayer_full_name, special_permit_path(special_permit) %></td>
                    <td> <%= link_to special_permit.name, special_permit_path(special_permit) %></td>
                    <td> <%= special_permit.start_date.strftime("%B %e, %Y") %></td>
                    <td> <%= special_permit.end_date.strftime("%B %e, %Y") %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
