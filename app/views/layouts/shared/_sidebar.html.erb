<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
      <!-- Sidebar user panel -->
      <div class="user-panel">
        <div class="pull-left image">
          <%=link_to(image_tag(current_user.avatar.url(:small), class: "img-circle", width: 40, height: 40), user_path(current_user)) %>
        </div>
        <div class="pull-left info">
          <p><%=link_to current_user.first_name, bplo_section_settings_user_path(current_user) %></p>
          <a href="#"><i class="fa fa-circle text-success"></i> <small><%=current_user.role %></small></a>
        </div>
      </div>
      <!-- search form -->
      <%=form_tag search_results_path, method: :get, class: "sidebar-form" do %>
      <div class="input-group">
        <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search..." %>
        <span class="input-group-btn">
          <%= button_tag(type: 'submit', id: "search-btn", class: "btn btn-flat") do %>
            <i class="fa fa-search"></i>
          <% end %>
        </span>
      </div>
    <% end %>
      <!-- /.search form -->
      <!-- sidebar menu: : style can be found in sidebar.less -->
      <ul class="sidebar-menu">
          <li class="header"> MAIN NAVIGATION </li>
          <!-- <li><a href="/dashboard"><i class="fa fa-dashboard"></i> <span>Dashboard</span></a></li> -->

          <li class=<%= 'active' if current_page?(taxpayers_path) %> ><a href="/taxpayers"><i class="icon-people"></i> <span> &nbsp; Taxpayers</span></a></li>
          <li class=<%= 'active' if current_page?(businesses_path) %> ><a href="/businesses"><i class="icon-grid"></i> <span> &nbsp; Businesses</span></a></li>
          <li class=<%= 'active' if current_page?(business_permits_path) %> ><a href="/business_permits"><i class="fa fa-file-text-o"></i> <span> Business Permits </span></a></li>


          <li class=<%= 'active' if current_page?(monitoring_index_path) %> ><a href="/monitoring"><i class="fa fa-eye"></i> <span> Monitoring</span></a></li>

          <li class=<%= 'active' if current_page?(collections_path) %> ><a href="/collections"><i class="icon-credit-card"></i> <span> &nbsp; Collections</span></a></li>

          <li class=<%= 'active' if current_page?(reports_path) %> ><a href="/reports"><i class="icon-folder-alt"></i> <span> &nbsp; Reports</span></a></li>
           <li class=<%= 'active' if current_page?(analytics_path) %> ><a href="/analytics"><i class="fa fa-bar-chart"></i> <span> &nbsp; Analytics</span></a></li>


          <% if policy(:settings).index? %>
          <li class="header"> SETTINGS </li>
            <li><a href="/bplo_section/settings"><i class="icon-settings"></i> <span> &nbsp; Settings </span></a></li>
          <% end %>
          <li class="header"> MTOP SECTION </li>
          <li class=<%= 'active' if current_page?(tricycles_path) %> ><a href="/tricycles"><i class="fa fa-motorcycle"></i> <span> &nbsp; Tricycles </span></a></li>
          <li class=<%= 'active' if current_page?(tricycle_reports_path) %> ><a href="/tricycle_reports"><i class="icon-folder-alt"></i> <span> &nbsp; Tricycle Reports </span></a></li>





    </section>
    <!-- /.sidebar -->
  </aside>
