<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <!-- Widget: user widget style 1 -->
  <div class="box box-widget widget-user-2">
    <!-- Add the bg color to the header using any of the bg-* classes -->
    <div class="widget-user-header">
      <div class="widget-user-image">
        <%=image_tag(@registration.business.avatar.url(:large), class: "img-circle") %>
      </div>
      <!-- /.widget-user-image -->
      <h3 class="widget-user-username">
        <%=link_to business_path(@registration.business) do %>
          <%= @registration.business.name.try(:upcase) %></h3>
          <h5 class="widget-user-desc text-muted"><%= @registration.business.taxpayers.distinct.each.map{|a| a.full_name }.join(" | ") %></h5>
        <% end %>
    </div>
    <div class="box-body">
      <h4> SEC Registration Details </h4>
      <hr>
      <%=simple_form_for @registration, url: :sec_registration do |f| %>
        <%= f.error_notification %>
        <%= f.input :date_issued, as: :string, input_html: { class: "datepicker" } %>
        <%= f.input :expiry_date, as: :string, input_html: { class: "datepicker" } %>
        <%= f.input :registration_number %>
        <div class="box-footer">
          <%= f.submit "Update Info", class: "btn btn-primary", data: { disable_with: "Saving..." } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
