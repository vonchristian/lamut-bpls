<% breadcrumb :taxpayer, @taxpayer %>
    <div class="row">
        <div class="col-md-3">

          <!-- Profile Image -->
          <div class="box box-primary">
            <div class="box-body box-profile">
              <!-- <img class="profile-user-img img-responsive img-circle" src="../../dist/img/user4-128x128.jpg" alt="User profile picture"> -->

              <%=image_tag(@taxpayer.avatar.url(:medium), class: "profile-user-img img-responsive img-circle") %>

              <h3 class="profile-username text-center"><%= @taxpayer.full_name %> </h3>

              <p class="text-muted text-center"></p>

              <ul class="list-group list-group-unbordered">
                <li class="list-group-item">
                  <b>Businesses</b> <a class="pull-right"><%= @taxpayer.businesses.distinct.count %> </a>
                </li>
                <li class="list-group-item">
                  <b>Tricycles</b> <a class="pull-right"><%= @taxpayer.tricycles.count %> </a>
                </li>

              </ul>

              <%=link_to 'Update Info', edit_taxpayer_path(@taxpayer), class: "btn btn-primary btn-block" %>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->

          <!-- About Me Box -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">About <%= @taxpayer.first_name %></h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <strong><i class="fa fa-book margin-r-5"></i> Education</strong>

              <p class="text-muted">

              </p>

              <hr>

              <strong><i class="fa fa-map-marker margin-r-5"></i> Location</strong>

              <p class="text-muted"><%= @taxpayer.full_address %></p>

              <hr>


            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
        <div class="col-md-9">
          <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">

              <li class="active"><a href="#businesses" data-toggle="tab">Businesses</a></li>
              <li><a href="#tricycles" data-toggle="tab">Tricycles</a></li>
              <li><a href="#taxpayer-settings" data-toggle="tab">Settings</a></li>


              <!-- <li><a href="#settings" data-toggle="tab">Settings</a></li> -->
            </ul>
            <div class="tab-content">
              <%=render 'taxpayers/partials/businesses' %>
              <%=render 'taxpayers/partials/tricycles' %>
              <%=render 'taxpayers/partials/settings' %>
            </div>
          </div>
          <!-- /.nav-tabs-custom -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
